<Window x:Class="PL.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="450" Width="800">
    <Grid Background="#FFC4FFFF">
        <TextBox x:Name="ErrorTitle" Background="LightGray" FontSize="25" FontWeight="Bold" BorderThickness="4" Margin="50,71,50,289"
                TextAlignment="Center" IsReadOnly="True"/>
        <TextBox x:Name="ErrorDetails" Background="Transparent" FontSize="22" Margin="50,150,50,217" TextAlignment="Center" IsReadOnly="True"/>
        <Button x:Name="OKButton" Background="LightGray" FontSize="25" Width="100" Height="50" Content="OK"
            FontWeight="DemiBold" BorderBrush="Transparent" Click="OKButton_Click" Margin="350,268,350,116" />
    </Grid>
</Window>
