<Window x:Class="PL.OrderIDWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="OrderIDWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="EnterOrderID" FontSize="25" TextAlignment="Center" FontWeight="DemiBold" FontFamily="italic" Text="Enter Your Order ID:" Margin="241,80,241,294"/>
        <TextBox x:Name="IDInput" FontSize="25" TextAlignment="Center" FontFamily="italic" Background="GhostWhite" BorderThickness="5" Margin="214,145,214,213" PreviewTextInput="tid_previewtextinput"
                     KeyDown="EnterPressed_KeyDown" MaxLength="4"/>
        <Button x:Name="OKButton" Background="LightGray" FontSize="25" Content="OK"
                    FontWeight="DemiBold" BorderBrush="Transparent" Click="OKBtn_Click" Margin="342,251,342,107"/>
    </Grid>

